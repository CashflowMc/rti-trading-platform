  try {
    const result = await API.testConnection();
    console.log('âœ… Proxy test successful:', result);
    alert('âœ… Proxy is working!');
    return true;
  } catch (error) {
    console.error('âŒ Proxy test failed:', error);
    alert('âŒ Proxy failed: ' + error.message);
    return false;
  }
};

